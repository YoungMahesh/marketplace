generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Item {
    id    Int    @id
    name  String
    image String
    price Float
}

model User {
    id            String     @id @default(cuid())
    name          String
    email         String?    @unique
    emailVerified DateTime?
    image         String?
    userCreds     UserCred[]
}

model UserCred {
    id       String @id @default(cuid())
    username String @unique
    password String
    userId   String
    user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
